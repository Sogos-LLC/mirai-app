# PostgreSQL Secret Template
# Copy this file to postgres-secret.yaml and replace $PASSWORD with actual password
# DO NOT commit postgres-secret.yaml to git
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: postgres
type: Opaque
stringData:
  password: $PASSWORD
  # Full DSN for Kratos (also stored here for convenience)
  dsn: postgres://kratos:$PASSWORD@postgres.postgres.svc.cluster.local:5432/kratos?sslmode=disable
